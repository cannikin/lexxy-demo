<!-- Add a <div> to surround this block, or each individual message, to fix -->
<% @messages.each do |message| %>
  <%= message.content %>
<% end %>

<%= form_with model: Message.new do |form| %>
  <%= form.rich_text_area :content, data: { turbo_permanent: true } %>
  <%= form.submit "Create Message" %>
<% end %>